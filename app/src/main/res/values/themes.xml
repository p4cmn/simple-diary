<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Records" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background_color</item>

        <item name="colorSurface">@color/color_surface</item>

        <item name="colorPrimary">@color/toolbar_background_color</item>
        <item name="colorOnPrimary">@color/background_color</item>

        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>

        <item name="colorAccent">@color/accent_color_blue</item>
        <item name="colorError">@color/accent_color_red</item>

        <item name="floatingActionButtonStyle">@style/FABStyle</item>
    </style>

    <style name="Theme.Records" parent="Base.Theme.Records" />

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="titleTextColor">@color/primary_text_color</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:foregroundTint">@color/toolbar_background_color</item>
    </style>

</resources>